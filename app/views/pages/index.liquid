{% extends 'layouts/simple' %}

{% block content/header %}

  {% capture jumbotron_title %}
    {% editable_text "jumbotron_title", format: "raw", rows: 1, priority: 1 %}
    {% endeditable_text %}
  {% endcapture %}
  {% capture jumbotron_sub_title %}
    {% editable_text "jumbotron_sub_title", format: "raw", rows: 2, priority: 2 %}
    {% endeditable_text %}
  {% endcapture %}
  {% capture btn_text %}
    {% editable_text "btn_text", format: "raw", rows: 1, priority: 3 %}
    {% endeditable_text %}
  {% endcapture %}


  <div class="row">
    <div class="xs-12">
      <div class="jumbotron">
        <div class="container">
          <div class="row">
            <div class="xs-12">
              <h1>{{ page.editable_elements.content.header.jumbotron_title | escape }}</h1>
            </div>
          </div>
          <div class="row">
            <div class="xs-12">
              <h2>{{ page.editable_elements.content.header.jumbotron_sub_title | escape }}</h2>
            </div>
          </div>
          <div class="row">
            <div class="xs-12">
              <a href="{% path_to news_index %}" class="btn btn-primary btn-lg">
                {{ page.editable_elements.content.header.btn_text | escape }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% capture first_column %}
    {% editable_text "first_column" %}
    {% endeditable_text %}
  {% endcapture %}
  {% capture second_column %}
    {% editable_text "second_column" %}
    {% endeditable_text %}
  {% endcapture %}
  {% capture third_column %}
    {% editable_text "third_column" %}
    {% endeditable_text %}
  {% endcapture %}

  <div class="row">
    <div class="col-lg-4">
      {{ page.editable_elements.content.header.first_column }}
    </div>
    <div class="col-lg-4">
      {{ page.editable_elements.content.header.second_column }}
    </div>
    <div class="col-lg-4">
      {{ page.editable_elements.content.header.third_column }}
    </div>
  </div>

{% endblock %}

{% block content/main %}
  <div class="row">
    <div class="col-xs-12">

      {% block 'featured_photo' %}
        {% comment %} Captured and editable legend for the featured photo {% endcomment %}
        {% capture legend %}
          {% editable_text "legend", format: "raw", rows: 3, hint: "Text displayed below the photo and in the ALT attribute." %}
          {% endeditable_text %}
        {% endcapture %}
        {% comment %} Captured and editable file for the featured photo {% endcomment %}
        {% capture photo %}{% editable_file "photo" %}saint_petersburgh_ermitage.jpg{% endeditable_file %}{% endcapture %}
        {% if photo == '' or photo == 'saint_petersburgh_ermitage.jpg' %}
          {% assign photo = 'saint_petersburgh_ermitage.jpg' | theme_image_url %}
        {% endif %}
        {% comment %} Including img_box liquid components (find it in snippets) {% endcomment %}
        {% include 'img_box' with legend: page.editable_elements.content.main.featured_photo.legend, photo: photo, size: "800x>" %}
      {% endblock %}

    </div>
  </div>

{% endblock %}
