---
title: Site members template

listed: false
published: true

content_type: site_members
---
{% extends 'layouts/for-ct-default' %}

  {% block content/main %}

    <article class="site-member-ct">

      <div class="row">
        <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">

          <h1>{{ site_members.full_name }}</h1>

          <h3 class="site-member-ct-bio-heading">
            {{ 'biography' | translate }}
          </h3>

          <div class="site-member-ct-bio">
            {{ site_member.biography }}
          </div>

          <h3 class="site-member-ct-position-heading">
            {{ 'position' | translate }}
          </h3>

          <div class="site-member-ct-bio">
            {{ site_member.category }}
          </div>

          <h3 class="site-member-ct-publications-heading">
            {{ 'publications_by_this_site_member' | translate }}
          </h3>

          <ul>
            {% for item in site_member.news %}

              {% unless forloop.index > 3 %}
                <li>
                  <a href="{% path_to item %}">{{ item.title }}</a>
                </li>
              {% else %}
                <li>
                  <a href="{% path_to member %}">
                    {{ 'and_even_more_news_by_this_member' | translate }}
                  </a>
                </li>
                {% break %}
              {% endunless %}

            {% endfor %}
          </ul>

        </div>
      </div>

    </article>

  {% endblock %}
